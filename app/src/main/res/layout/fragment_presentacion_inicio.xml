<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Si necesitas vincular datos, puedes agregar variables aquí -->
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="#F49090">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Imagen motivacional -->
            <ImageView
                android:id="@+id/imageExercise"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/eje43"
                android:contentDescription="Imagen de Ejercicio"
                android:background="@drawable/jofff"
                android:elevation="8dp"
                android:padding="8dp" />

            <!-- Título motivacional -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="¡Empieza tu jornada de ejercicio hoy!"
                android:textColor="#3A3A3A"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Descripción general de los beneficios -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Ejercitarse regularmente tiene múltiples beneficios para la salud. Mejora la condición física, incrementa la energía, ayuda a controlar el peso, reduce el estrés y promueve el bienestar general. ¡Es una inversión para tu cuerpo y mente!"
                android:textSize="16sp"
                android:textColor="#3A3A3A"
                android:lineSpacingExtra="8dp"
                android:gravity="center_horizontal"
                android:padding="8dp" />

            <!-- Sección adicional de beneficios: Mejorar la salud cardiovascular -->
            <ImageView
                android:id="@+id/imageCardio"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cardio"
                android:contentDescription="Imagen de Salud Cardiovascular"
                android:elevation="8dp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvCardio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="El ejercicio fortalece el corazón, mejora la circulación y disminuye el riesgo de enfermedades cardiovasculares. Un corazón sano es clave para una vida larga y activa."
                android:textSize="16sp"
                android:textColor="#3A3A3A"
                android:lineSpacingExtra="8dp"
                android:gravity="center_horizontal"
                android:padding="8dp" />

            <!-- Sección adicional: Incrementar la fuerza y la resistencia -->
            <ImageView
                android:id="@+id/imageStrength"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fuerza"
                android:contentDescription="Imagen de Fuerza y Resistencia"
                android:elevation="8dp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvStrength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="El entrenamiento de fuerza no solo aumenta los músculos, también mejora la densidad ósea y la resistencia física, previniendo lesiones y mejorando la movilidad."
                android:textSize="16sp"
                android:textColor="#3A3A3A"
                android:lineSpacingExtra="8dp"
                android:gravity="center_horizontal"
                android:padding="8dp" />

            <!-- Sección adicional: Mejora del estado mental -->
            <ImageView
                android:id="@+id/imageMental"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:scaleType="centerCrop"
                android:src="@drawable/saludmental"
                android:contentDescription="Imagen de Estado Mental"
                android:elevation="8dp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvMentalHealth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="El ejercicio es una excelente herramienta para reducir la ansiedad y la depresión, mejorando tu bienestar emocional. Además, estimula la producción de endorfinas, las hormonas de la felicidad."
                android:textSize="16sp"
                android:textColor="#3A3A3A"
                android:lineSpacingExtra="8dp"
                android:gravity="center_horizontal"
                android:padding="8dp" />

        </LinearLayout>
    </ScrollView>
</layout>


