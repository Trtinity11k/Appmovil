<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DetalledeEjercicio">

    <!-- Contenedor para centrar la informaci贸n -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Imagen del ejercicio -->
        <ImageView
            android:id="@+id/exerciseImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fuerza"
            android:contentDescription="Exercise Image"
            android:background="@drawable/borde" />

        <!-- Espacio entre imagen y descripci贸n -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Descripci贸n del ejercicio -->
        <TextView
            android:id="@+id/exerciseDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="36dp"
            android:text="Descripci贸n del ejercicio"
            android:textSize="25sp"
            android:textColor="@color/black"
        android:background="@drawable/backblanco"
        android:gravity="center" />

    </LinearLayout>

</FrameLayout>
