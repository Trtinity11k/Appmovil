<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Si necesitas vincular datos, puedes agregar variables aquí -->
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="#F49090">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Título del fragmento -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Ejercicios de Hombro"
                android:textColor="#3A3A3A"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Botón 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/pressmili"
                    android:contentDescription="Ejercicio Hombro 1"
                    android:layout_gravity="center" />

                <Button
                    android:id="@+id/btnPressMilitar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Press Militar"
                    android:backgroundTint="#6200EE"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Botón 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/elevacionlateral"
                    android:contentDescription="Ejercicio Hombro 2"
                    android:layout_gravity="center" />

                <Button
                    android:id="@+id/btnElevacionesLaterales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Elevaciones Laterales"
                    android:backgroundTint="#6200EE"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Botón 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/elefront"
                    android:contentDescription="Ejercicio Hombro 3"
                    android:layout_gravity="center" />

                <Button
                    android:id="@+id/btnElevacionesFrontales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Elevaciones Frontales"
                    android:backgroundTint="#6200EE"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Botón 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/paja"
                    android:contentDescription="Ejercicio Hombro 4"
                    android:layout_gravity="center" />

                <Button
                    android:id="@+id/btnPajaros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pájaros"
                    android:backgroundTint="#6200EE"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Botón 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/remoconbarra"
                    android:contentDescription="Ejercicio Hombro 5"
                    android:layout_gravity="center" />

                <Button
                    android:id="@+id/btnRemo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remo"
                    android:backgroundTint="#6200EE"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>
